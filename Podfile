platform :ios, '14.0'
use_frameworks!

def firebase_pods
  pod 'Firebase/Analytics'
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
end

def general_pods
  pod 'SDWebImage'
  pod 'Alamofire'
end

target 'ViFi' do
  firebase_pods
  general_pods
end
